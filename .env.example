# Simple OCR Service Configuration
# Copy this file to .env and customize for your environment

# Application Settings
APP_NAME=simple-ocr
APP_VERSION=0.1.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# OCR Engine Configuration
OCR_ENGINE=deepseek  # Options: deepseek, mock
MODEL_NAME=deepseek-ai/deepseek-ocr
MODEL_PATH=/models/deepseek-ocr
VLLM_GPU_MEMORY_UTILIZATION=0.9
VLLM_MAX_MODEL_LEN=4096
VLLM_TENSOR_PARALLEL_SIZE=1

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_SUBJECT=ocr.jobs
NATS_STREAM=OCR_JOBS
NATS_CONSUMER=ocr-worker
NATS_MAX_CONCURRENT=5
NATS_ACK_WAIT=300  # seconds

# Simple Content API Configuration
CONTENT_API_URL=http://localhost:8080
CONTENT_API_TIMEOUT=30  # seconds
CONTENT_API_MAX_RETRIES=3

# Processing Configuration
MAX_IMAGE_SIZE=10485760  # 10MB in bytes
MAX_PDF_PAGES=100
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,tiff,bmp,webp
SUPPORTED_DOC_FORMATS=pdf,docx,pptx,xlsx

# Temp Storage
TEMP_DIR=/tmp/simple-ocr
CLEANUP_TEMP_FILES=true

# Performance Tuning
BATCH_SIZE=1
PROCESSING_TIMEOUT=300  # seconds
